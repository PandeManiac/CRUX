{
    "files.associations": {
        "stdint.h": "c",
        "crux_window.h": "c",
        "crux_glad_wrap.h": "c",
        "crux_sdl_wrap.h": "c",
        "sim_pixel.h": "c",
        "sim_thread.h": "c",
        "tinycthread.h": "c",
        "sim_material.h": "c"
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.clang-format": true
    },

    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "LLVM",

    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },

    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    }
}
